<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayankaggarwal.dcare.fragments.StartShift"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/frame_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shiftrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="bottom">
            <CheckBox
                android:id="@+id/remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/themeblue"
                android:checked="false"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="Remember above as default"
                android:textColor="@color/themegrey" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/proceedbutton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.70"
                android:background="@drawable/round_shape_border_grey"
                android:text="PROCEED"
                android:textColor="@color/themegrey"
                android:textSize="20dp" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
