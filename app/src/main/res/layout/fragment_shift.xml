<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/frame_layout"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mayankaggarwal.dcare.fragments.ShiftFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

    <!--set visibilty-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/startinglayout">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="You can start taking \n orders only after \n starting the shift"
            android:textColor="@color/dark_grey"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/startshift"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.70"
                android:background="@drawable/round_shape_border_blue"
                android:text="Yes,Start the shift"
                android:textColor="@color/themeblue"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/noshift"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.70"
                android:background="@drawable/round_shape_border_orange"
                android:text="No, I'll do it later"
                android:textColor="@color/themered"
                android:textSize="20dp" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
