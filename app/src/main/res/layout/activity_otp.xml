<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/scrollView"
    android:orientation="vertical"
    tools:context="com.example.mayankaggarwal.dcare.activities.OtpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearlayout"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/transparent"

            android:src="@drawable/logo_dcare_white_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/countrycode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="(AQ) +672 â–¾"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/themegrey"
                android:id="@+id/mobiletext"
                android:text="Mobile Number"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    android:layout_height="40dp"
                    android:maxLength="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:id="@+id/mobileedittext"
                    android:paddingLeft="10dp"
                    android:textSize="13dp"
                    android:maxEms="10"
                    android:background="@drawable/round_shape_solid_grey"
                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.70"
                android:layout_height="40dp"
                android:text="GET OTP"
                android:enabled="false"
                android:textSize="20dp"
                android:id="@+id/getotpbutton"
                android:textColor="@color/themegrey"
                android:background="@drawable/round_shape_border_grey"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
